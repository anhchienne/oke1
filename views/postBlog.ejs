<%- include("partials/header.ejs") %>
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 mt-4 mb-2 pt-4 border border-light rounded bg-light">
                <h2 class="text-center">Post your blog</h2>
                <form action="/postBlog" method="POST">
                    <div class="form-group mb-2">
                        <label>Author: </label>
                        <input type="text" class="form-control" id="author" placeholder="Author name" name="userName">
                    </div>
                    <div class="form-group mb-2">
                        <label>Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Your email" name="email">
                    </div>
                    <div class="form-group mb-2">
                        <label>Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Title" name="title">
                    </div>
                    <div class="form-group mb-2">
                        <label>Tag</label>
                        <input type="text" class="form-control" id="tag" placeholder="Tag" name="tag">
                    </div>
                    <div class="form-group mb-2">
                        <label>Image source (link to the image address):</label>
                        <input type="text" class="form-control" id="imageSrc" placeholder="img" name="imageSrc">
                    </div>
                    <div class="form-group mb-2">
                        <label>Content:</label>
                        <textarea class="form-control" id="content" rows="3" name="content"
                            style="max-height: 7rem; min-height:7rem;"></textarea>
                    </div>
                    <div class=" form-group mb-1" style="text-align: center;">
                        <input type="submit" class="btn btn-primary my-1 " value="Submit">
                    </div>
                </form>
                <form action="/returnBlog" method="POST">
                    <div class="form-group mb-1" style="text-align: center;">
                        <input type="submit" class="btn btn-secondary my-1 " value="Discard">
                    </div>
                </form>
            </div>
            <div class="col-3"></div>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>