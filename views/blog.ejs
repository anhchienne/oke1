<%- include("partials/header.ejs") %>
    <link rel="stylesheet" href="styles/blog.css">
    <div id="snippetContent" class="mt-3">
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
        <div class="container blog-page">
            <% for(var i=0;i< numBlogs;i++){ if(numBlogs - i>=3){%>
                <div class="row clearfix" style=" justify-content:center">
                    <div class="col-lg-1.5 col-md-12"></div>
                    <% for(var j=0;j<3;j++){ %>
                        <div class="col-lg-3 col-md-12">
                            <div class="card single_post">
                                <div class="header" style="background-color: rgb(251, 253, 242);">
                                    <h2><strong>Latest</strong> Post</h2>
                                </div>
                                <div class="body" style="background-color: rgb(251, 253, 242);">
                                    <h3 class="m-t-0 m-b-5"><a href="blog-details.html">
                                            <%=blogs[i+j].title %>
                                        </a>
                                    </h3>
                                    <ul class="meta">
                                        <li><a href="javascript:void(0);"><i
                                                    class="zmdi zmdi-account col-blue"></i>Posted By:
                                                <%= blogs[i+j].userName %>
                                            </a></li>
                                        <li><a href="javascript:void(0);"><i class="zmdi zmdi-label col-amber"></i>
                                                <%= blogs[i+j].tag %>
                                            </a></li>
                                    </ul>
                                </div>
                                <div class="body" style="background-color: rgb(251, 253, 242);">
                                    <div class="img-post m-b-15"> <img src="<%=blogs[i+j].imageSrc%>"
                                            alt="Awesome Image">
                                        <div class="social_share"> <button
                                                class="btn btn-primary btn-icon btn-icon-mini btn-round"><i
                                                    class="zmdi zmdi-facebook"></i></button> <button
                                                class="btn btn-primary btn-icon btn-icon-mini btn-round"><i
                                                    class="zmdi zmdi-twitter"></i></button> <button
                                                class="btn btn-primary btn-icon btn-icon-mini btn-round"><i
                                                    class="zmdi zmdi-instagram"></i></button></div>
                                    </div>
                                    <p>
                                        <%= blogs[i+j].content %>
                                    </p>
                                    <!-- <a href="/editBlog" title="read more" class="btn btn-round btn-info">Edit</a> -->
                                    <form action="/editBlog" method="POST">
                                        <input type="hidden" name="id" value="<%= blogs[i+j].id %>">
                                        <input type="submit" class="btn btn-round btn-info" value="Edit">
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <div class="col-lg-1.5 col-md-12"></div>
                </div>
                <% i+=2} else{%>
                    <div class="row clearfix" style=" justify-content:center">
                        <% while(i<numBlogs){ %>
                            <div class="col-lg-3 col-md-12">
                                <div class="card single_post">
                                    <div class="header" style="background-color: rgb(251, 253, 242);">
                                        <h2><strong>Latest</strong> Post</h2>
                                    </div>
                                    <div class="body" style="background-color: rgb(251, 253, 242);">
                                        <h3 class="m-t-0 m-b-5"><a href="blog-details.html">
                                                <%=blogs[i].title %>
                                            </a>
                                        </h3>
                                        <ul class="meta">
                                            <li><a href="javascript:void(0);"><i
                                                        class="zmdi zmdi-account col-blue"></i>Posted By:
                                                    <%= blogs[i].userName %>
                                                </a></li>
                                            <li><a href="javascript:void(0);"><i class="zmdi zmdi-label col-amber"></i>
                                                    <%= blogs[i].tag %>
                                                </a></li>
                                        </ul>
                                    </div>
                                    <div class="body" style="background-color: rgb(251, 253, 242);">
                                        <div class="img-post m-b-15"> <img src="<%=blogs[i].imageSrc%>"
                                                alt="Awesome Image">
                                            <div class="social_share"> <button
                                                    class="btn btn-primary btn-icon btn-icon-mini btn-round"><i
                                                        class="zmdi zmdi-facebook"></i></button> <button
                                                    class="btn btn-primary btn-icon btn-icon-mini btn-round"><i
                                                        class="zmdi zmdi-twitter"></i></button> <button
                                                    class="btn btn-primary btn-icon btn-icon-mini btn-round"><i
                                                        class="zmdi zmdi-instagram"></i></button></div>
                                        </div>
                                        <p>
                                            <%= blogs[i].content %>
                                        </p>
                                        <form action="/editBlog" method="POST">
                                            <input type="hidden" name="id" value="<%= blogs[i].id %>">
                                            <input type="submit" class="btn btn-round btn-info" value="Edit">
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% i++;} %>
                    </div>
                    <% break;} }%>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>